<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center">{{ course.course_code }}</h1>
        <h2 class="text-center text-danger mb-4">{{ course.course_name }}</h2>

        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Student Name</th>
                </tr>
            </thead>
            <tbody>
                {{# enrollees }}
                <tr>
                    <td>{{ student_code }}</td>
                    <td>{{ full_name }}</td>
                </tr>
                {{/ enrollees }}
            </tbody>
        </table>

        <hr class="my-4">

        <div class="text-center">
            <a href="/courses" class="btn btn-primary">List of courses</a>
            <br>
            <a href="/students" class="btn btn-secondary">List of students</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
